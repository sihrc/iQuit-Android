<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id = "@+id/activity_main_quit_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_main_quit_button_height"
        android:layout_alignParentBottom="true"
        android:text="@string/activity_main_quit_button"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize = "@dimen/activity_main_quit_font_size"
        android:fontFamily="sans-serif-condensed"
        android:background="@android:color/holo_red_dark"/>

    <com.sihrc.quit.ResizableImageView
        android:id="@+id/activity_main_image"
        android:contentDescription="@string/activity_main_image_description"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above = "@id/activity_main_quit_button"/>

</RelativeLayout>